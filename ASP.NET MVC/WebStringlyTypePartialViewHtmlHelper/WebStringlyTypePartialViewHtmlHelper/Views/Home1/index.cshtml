@model WebStringlyTypePartialViewHtmlHelper.Models.Calculation

@{
    ViewBag.Title = "index";
}

<h2>Calculations</h2>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.num1) @Html.TextBoxFor(model => model.num1, new { @class = "form-control" })
    @Html.LabelFor(model => model.num2) @Html.TextBoxFor(model => model.num2, new { @class = "form-control" })
    <br />
    <br />
    <input type="submit" class="form-control btn-danger" value="Submit" name="Submit" />
    <h1>Addition Result is with ViewBag: @ViewBag.result</h1>
    <h1>Addition Result is with ViewData: @ViewData["result"]</h1>
    <h1>Addition Result is with TempData: @TempData["result"]</h1>
    <h1>Addition Result is with Session: @Session["result"]</h1>
}

